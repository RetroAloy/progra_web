extends ./layout/index.pug 
block compartircontenido
    .p-4
    center.h1 #{pagina}
    .p-4
    main.container.mt-5 
        .row
            .col-md-12
                h2.d-block.w-100.text-center Agregar Hoteles  
                if (errores)
                    each error in errores 
                        .alert.col.alert-danger.text-center=error.mensaje
            .row.justify-content-center.col 
                .col-md-8
                    form(action="/agregar_hoteles" method="POST")
                        .form-group 
                            label(for="id_htl") id_htl   
                            input#id_htl(type="text", placeholder="Identificador" name="id", class="form-control", value=id_htl ,readonly="readonly")
                        .form-group 
                            label(for="nombre") nombre 
                            input#nombre(type="text", placeholder="tu nombre" name="nombre", class="form-control", value=nombre)
                        .form-group 
                            label(for="direccion") direccion 
                            input#direccion(type="text", placeholder="tu direccion" name="direccion",
                            class="form-control", value=direccion)
                        .form-group 
                            label(for="imagen") telefono  
                            input#telefono(type="text", placeholder="tu telefono" name="telefono",
                            class="form-control", value=telefono)   
                        .form-group 
                            label(for="imagen") correo 
                            input#correo(type="text", placeholder="tu correo" name="correo", 
                            class="form-control", value=correo)
                        center
                            input.btn.btn-outline-success(type="submit")