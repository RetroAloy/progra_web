extends ./layout/index.pug 
block compartircontenido
    .p-4
    center.h1 #{pagina}
    .p-4
    main.container.mt-5 
        .row
            .col-md-12
                h2.d-block.w-100.text-center Agregar Gerentes   
                if (errores)
                    each error in errores 
                        .alert.col.alert-danger.text-center=error.mensaje
            .row.justify-content-center.col 
                .col-md-8
                    form(action="/agregar_gerentes" method="POST")
                        .form-group 
                            label(for="id_grt") id_grt    
                            input#id_grt(type="text", placeholder="Identificador" name="id", class="form-control", value=id_grt ,readonly="readonly")
                        .form-group 
                            label(for="id_htl") id_htl     
                            input#id_htl(type="text", placeholder="Tu hotel" name="Hotel", class="form-control", value=id_htl)
                        .form-group 
                            label(for="nombre") nombre 
                            input#nombre(type="text", placeholder="tu nombre" name="nombre", class="form-control", value=nombre)
                        .form-group 
                            label(for="direccion") ap_paterno 
                            input#ap_paterno(type="text", placeholder="tu apellido paterno" name="ap_paterno",
                            class="form-control", value=ap_paterno)
                        .form-group 
                            label(for="imagen") ap_materno  
                            input#ap_materno(type="text", placeholder="tu apellido materno" name="ap_materno",
                            class="form-control", value=ap_materno)   
                        .form-group 
                            label(for="imagen") telefono 
                            input#telefono(type="text", placeholder="tu telefono" name="telefono", 
                            class="form-control", value=telefono)
                        center
                            input.btn.btn-outline-success(type="submit")